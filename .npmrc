# 禁用审计和资金信息以加快安装速度
audit=false
fund=false
progress=false

# 使用 legacy peer deps 解决依赖冲突
legacy-peer-deps=true

# 设置更短的超时时间
timeout=120000

# 网络优化设置 - 更保守的配置
fetch-retries=2
fetch-retry-factor=2
fetch-retry-mintimeout=5000
fetch-retry-maxtimeout=30000

# 使用更快的注册表
registry=https://registry.npmjs.org/

# 并发安装优化 - 降低并发数
maxsockets=5

# 禁用可选依赖以避免安装问题
optional=false

# 强制使用 npm ci 的严格模式
prefer-offline=true
cache-max=86400000
