# 禁用审计和资金信息以加快安装速度
audit=false
fund=false
progress=false

# 使用 legacy peer deps 解决依赖冲突
legacy-peer-deps=true

# 设置超时时间
timeout=600000

# 启用可选依赖但不阻塞安装
optional=true

# 网络优化设置
fetch-retries=5
fetch-retry-factor=10
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# 使用更快的注册表
registry=https://registry.npmjs.org/

# 禁用包锁定验证以加快安装
package-lock=false

# 并发安装优化
maxsockets=50
