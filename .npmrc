# 禁用审计和资金信息以加快安装速度
audit=false
fund=false
progress=false

# 使用 legacy peer deps 解决依赖冲突
legacy-peer-deps=true

# 设置超时时间
timeout=300000

# 网络优化设置
fetch-retries=3
fetch-retry-factor=10
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# 使用更快的注册表
registry=https://registry.npmjs.org/

# 并发安装优化
maxsockets=15
